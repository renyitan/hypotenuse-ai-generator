{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts"
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "es6"
    ],
    "skipLibCheck": true
  },
}